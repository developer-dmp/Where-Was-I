<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/primaryColor"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:contentPadding="15dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationNameTextView"
            android:text="Name:"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationCategoryTextView"
            android:layout_below="@+id/locationNameTextView"
            android:text="Category:"
            android:textColor="@color/primaryTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationDistanceTextView"
            android:layout_below="@+id/locationCategoryTextView"
            android:text="Distance: 1.3 mi"
            android:textColor="@color/primaryTextColor" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/locationImageView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>